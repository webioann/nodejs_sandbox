{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "module": "nodenext",
    "target": "es2018",
    "lib": ["ES6"],
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // for correct TS file extension imports in ES-6 mode
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"],
  "ts-node": {"esm": true},
  "lib": ["ESNext"]
}
